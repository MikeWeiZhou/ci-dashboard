{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6"],
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        // "noUnusedLocals": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "unittests"
    ]
}